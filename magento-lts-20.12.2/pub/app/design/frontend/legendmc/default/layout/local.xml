<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <!--removendo arquivos javascript inúteis-->
            <action method="removeItem">
                <type>js</type>
                <file>scriptaculous/builder.js</file>
            </action>
            <action method="removeItem">
                <type>js</type>
                <file>scriptaculous/dragdrop.js</file>
            </action>
            <action method="removeItem">
                <type>js</type>
                <file>scriptaculous/slider.js</file>
            </action>
            

            <!--removendo arquivos css inúteis-->
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/widgets.css</name>
            </action>
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/print.css</name>
            </action>

            <!--adicionando arquivos usados na loja CSS-->
            <action method="addCss">
                <stylesheet>libs/bootstrap-5.3.3/css/bootstrap.min.css</stylesheet>
            </action>

            <action method="addCss">
                <stylesheet>css/style.min.css</stylesheet>
            </action>

            <!--adicionando arquivos js-->
            <action method="addItem">
                <type>skin_js</type>
                <name>libs/fontawesome-6.7.2/js/all.min.js</name>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>libs/bootstrap-5.3.3/js/bootstrap.bundle.min.js</name>
            </action>

        </reference>

    </default>

    <catalog_product_view>
        <reference name="head">
            <action method="removeItem">
                <type>js</type>
                <name>varien/configurable.js</name>
            </action>
        </reference>
    </catalog_product_view>
</layout>